/*footer section*/
footer
    padding: 40px 0
    p
      font-size var-font-size + 1
      color: #808080
      margin: 0

#footer-logo
    margin-bottom: 20px

#footer-menu
    margin-top: 40px
    padding-left: 40px
    ul
      padding: 0
    li
      display:block
      font-size var-font-size + 1
      margin-bottom: 10px
      a
        display: block
        color: #61a445
        font-family font-bold2
      a:hover
        color: #F39C12

.social-icons
    padding: 0
    margin: 20px 0
    li
      display: inline-block
      margin-right: 15px
    a
      display: block
      background: #a9a9a9
      color: white
      height: 34px
      width: 34px
      border-radius(50%)
      text-align: center
      padding-top: 8px
    a:hover
      background-color: #f39c12
    i
      font-size var-font-size + 6

@media screen and (max-width: 768px)
    #footer-menu
        padding: 0 15px

@media screen and (max-width: 580px)
    footer
       padding: 20px 0

    #footer-menu
       padding-left: 20px
