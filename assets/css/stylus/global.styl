// variable
var-font-size = 12px
font-bold = 'ProximaNovaBold'
font-bold2 = 'NunitoSansBold'
font-semibold = 'ProximaNovaSimibold'
font-regular = 'ProximaNovaRegular'
font-light = 'ProximaNovaLight'
border-radius(val)
  -webkit-border-radius: val
  -moz-border-radius: val
  -ms-border-radius: val
  -o-border-radius: val
  border-radius: val

transition($args)
  -webkit-transition: $args
  -moz-transition: $args
  -ms-transition: $args
  -o-transition: $args
  transition: $args

box-shadow(args...)
   -webkit-box-shadow args
   -moz-box-shadow args
   -ms-box-shadow args
   -o-box-shadow args
   box-shadow args

a:hover
    text-decoration: none
    color: white

*
    transition(all 0.5s ease-in-out)
    box-sizing: border-box

body
     color: #373737
     font-size var-font-size + 4
     font-family font-regular

h1
    font-size var-font-size + 30

h2
     font-size var-font-size + 26

h4
     font-size var-font-size + 10

strong
   font-family font-bold


.form-group
    position: relative

.clear
    clear: both

.btn
    font-size var-font-size + 8
    padding: 15px 65px
    cursor: pointer

.btn:after
    content: ''
    display: inline-block
    width: 25px
    height: 17px
    background: url(../img/icons/left-icon.png) no-repeat
    position: relative
    margin: 0 0 0 10px
    top: 2px

.main-bg
        background: linear-gradient(140deg, #75a245 0%, #71a145 50%, #538842 75%)

.main-bg2
        background: linear-gradient(140deg, #75a245 0%, #71a145 50%, #72a649 75%)

.btn2
    font-size var-font-size + 2
    padding: 10px
    width: 180px
    text-align: center
    border-radius(30px);

.color1
    background-color: #F39C12
    border-bottom: 4px solid #e19011
    color: white
    font-family font-bold

.color1:hover
    background-color: #e19011;
    color: white

.default-line
    border: 6px solid #f39c12
    width: 95px
    float: left
    margin: 0 0 15px 0
    display: block
    border-radius(5px)

.sub-title
    font-size var-font-size + 7

.mobile
    display: none

section
