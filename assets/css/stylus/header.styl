      font-size var-font-size - 12
      line-height: 0%
      width: 0px
      border-bottom: 15px solid #74a449
      border-left: 15px solid transparent
      border-right: 15px solid transparent
      content: ""
      display: block
      position: absolute
      bottom: -45px
      left: 0
      right: 0
      margin: 0 auto
    .link-dropdown
      color: #74a449
      text-decoration: none

