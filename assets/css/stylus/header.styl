#toggle
    display: none
    width: 28px
    height: 25px
    margin: 0 auto
    position: absolute
    top: 45px
    right: 40px
    span
      position: relative
    span:after
      top: 9px
    span:before
      top: -9px
    span,
    span:before,
    span:after
      display: block
      content: ""
      position: absolute
      left: 0
      width: 100%
      height: 5px
      background-color: #888
      transition(all 0.3s ease-in-out 200ms)
      backface-visibility: hidden
      border-radius(2px)

#toggle.on
  span
    background-color: transparent
  span:before
    transform: rotate(45deg) translate(5px, 5px)
  span:after
    transform: rotate(-45deg) translate(7px, -8px)

#toggle.on + #side-right
  opacity: 1
  visibility: visible

#side-right
  position: static
  padding: 10px
  margin: auto
  text-align: center
  border-radius(4px)

#side-right:after
  position: absolute
  top: -15px
  left: 95px
  content: ""
  display: block

