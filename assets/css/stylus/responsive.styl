@media screen and (max-width: 1200px)
    .compare-box2
        padding: 50px 0 50px 0

    .top-menu-list li
        margin-right: 15px

   

    .protection-box
        padding: 60px 20px 40px

@media screen and (max-width: 1024px)
    .protection-box
        padding: 60px 40px 40px
        min-height: 340px


@media screen and (max-width: 990px)
/* header style */
    #toggle
        display: block

    #side-right
        opacity: 0;
        visibility: hidden
        transition: opacity .4s
        position: absolute
        z-index: 1000
        width: 100%
        left: 0
        right: 0
        padding: 0 40px 0 40px
        text-align: left
        background: white
        box-shadow 0 1px 8px rgba(0,0,0,0.05)

    .header-help-center
        padding: 15px

    .top-menu-list
        li
          display: block
          border-bottom: 1px solid #e2e2e2
          a
            display: block
            padding: 15px
          a:hover
            background-color: #f2f2f2


    .header-help-center,
    .top-menu-list
        float: none

    .dropdown-menu
        position: relative
        top: 0
        p
          margin-top: 20px

    .mega-menu-list li
        padding: 0

    .mega-menu-list2.arrow-list
        li::before
          top: 25px;

    .mega-last li
        text-align: left

    #logo,
    #top-menu,
    #side-right
        float: none

    .header-help-center,
    .call-text
        float: left

    .navbar-toggleable-md
        position: absolute
        right: 0
        top: 0
        width: 100%
        z-index: 1000

    #top-menu
        margin-top: 65px
        background-color: #fff
        padding: 20px

    #top-menu:before , #top-menu:after
        display: table
        content: ""

    #top-menu:after
        clear: both

    .mega-menu-list.mega-last li
        border: none

    .top-menu-list
        li
          a:hover
            background: none
            color: #f39c12
          .btn2
            padding: 10px

    .mega-menu-list2.dropdown-arrow-list li::before
        top: 24px

    .open-dropdown
        .link-dropdown:after
          border: none

    /* home blog style */
    .home-blog-post-content
        padding: 10px

    .home-blog-content-post
        padding: 10px

    .home-blog-post-content p
        font-size: 12px

    /* rating style */
    .our-rating
        border: none

    #service
        .rating-box
            padding: 20px

    .protection-box
        margin-bottom: 80px
        min-height: auto

    .protection-box-holder
        margin-bottom: 0

    #life-insurance
        padding-bottom: 0
        img
          position: relative
          bottom: 0
          margin: 40px auto 0
          display: block
    .mobile
        display: block

    .desktop
        display: none

    .inner-content-wrap
        padding: 0

    /* sidebar style */
    #sidebar
        margin-top: 40px

    .widget-quote-box .input-code
        background-position: 2% center

    .widget-search-box button
        top: 95px

    /* company box style */
    .company-box
        min-height: 200px
        .company-check-icon
          top: 20px

@media screen and (max-width: 768px)
    .service-box
        margin-bottom: 40px

    .our-rating-holder
        padding: 0

    .protection-box
        min-height: auto
        margin-bottom: 100px

    .protection-box.nm-m
        margin-bottom: 50px

    .compare-box , .compare-box2
         padding: 50px

    #testimonial-insurance .carousel-control-next-icon, #testimonial-insurance .carousel-control-prev-icon
        height: 30px

    .carousel-control-prev
        left: -15px

    .carousel-control-next
        right: -15px

    #featured-bg-4 .home-blog-post-content
        width: 100%

@media screen and (max-width: 767px)
    .home-blog-post-content p
        font-size: 14px

    .social-icons li
        margin-right: 5px

    #featured-bg-1
        height: auto
        .home-blog-content-post
          position: relative

    .home-blog-content-post
        padding: 40px 20px 20px
        margin-bottom: 20px

    #blog-insurance .col-md-8.row , .full-blog-sec
        margin: 0

    #blog-insurance .col-md-8.row .col-md-6 , #blog-insurance .col-md-8.row .col-md-12
        padding: 0;

@media screen and (max-width: 580px)
    /* general style */
    h1
        font-size: 34px

    h2
        font-size: 28px

    .btn
        font-size: 15px
        padding: 10px 0
        width: 100%

    /* header style */
    #side-right
        padding: 0

    /* testimonial style */
    #testimonial-insurance .carousel-control-next, #testimonial-insurance .carousel-control-prev
        width: 10%

    #testimonial-insurance .carousel-inner
        width: 75%


    #testimonial-insurance .carousel-control-next-icon, #testimonial-insurance .carousel-control-prev-icon
        height: 32px

    #testimonial-insurance .carousel-inner
        overflow: auto

    #testimonial-insurance .carousel-item
        padding: 15px 20px 0px

    /* banner style */
    #banner
        padding: 20px
        .postcode-input
            font-size: 15px
            padding: 15px 20px 15px 35px

    .mac-img
        margin: 20px 0 20px

    /* lender style */
    #lenders
        .container
            padding: 0 45px

    #policies-insurance h3
        margin: 0 0 20px 0

    /* carousel style */
    .carousel-control-prev
        left: -10px

    .carousel-control-next
        right: -10px

    /* rating style */
    #service
        .rating-box
            margin-bottom: 20px
            .carousel-inner
              width: 100%
            .carousel-caption
              text-align: center

    /* inner style */

    #inner-content
        padding: 0 20px
        .container
            padding: 40px
        .col-md-12
          padding: 0

    #inner-page h2
         font-size: 28px

    /* section style */
    #why-insurance , .service-box.last  , .top-menu-list li
        margin: 0

    #service, #used-insurance, #protection-insurance
        padding: 20px 0

    #life-insurance
        padding: 20px 0 0

    .protection-box.nm-m
        margin-bottom: 40px

    .protection-box
        padding: 60px 20px 20px
        margin-bottom: 80px

    .compare-box ,  .compare-box2
       padding: 40px 20px

    /* protection style */

    .inner-content-wrap
      .protection-title
        font-size: 20px

    /* slick style */
    .slick-slide
         margin: 0px 15px

     .slick-prev
         left: -30px

     .slick-next
         right: -25px

     /* blog style */

    #pagination li
        margin: 0


    /* widget style */
    .widget-quote-box input[type="text"], .widget-quote-box select , .widget-search-box input[type="text"]
        font-size: 11px
        padding: 10px 10px 10px 40px

    .widget-search-box button
        top: 90px
        right: 25px

    .widget-quote-box .select-icon
        top: 8px

    /* collapse style */
    .panel-heading
      a
        font-size: 17px

    /* footer style */
    footer
       padding: 20px 0

    #footer-menu
       padding-left: 20px

@media screen and (max-width: 380px)
    #main-blog-pagination
        li
            margin: 0
    .panel-body
      ul
        padding: 0

@media screen and (max-width: 320px)
    .slick-slide
        margin: 0px 14px
