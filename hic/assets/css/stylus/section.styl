.faq-calculate,
#policies-insurance
    .btn
      display: inline-block
      font-size var-font-size + 3
      padding: 10px 40px
/*policies section */
#policies-insurance
    padding: 23px 0
    background: url(../img/compare-bg.jpg) no-repeat
    background-size: cover
    h3
      font-size var-font-size + 16
      color: #fff
      margin: 0 40px 0 0
      display: inline-block
      vertical-align: middle
      font-family font-bold
 
/*inner section*/
#inner-page
    position: relative
    padding: 100px 0 60px
    background-color: #fafafa
    .inner-main-title
      font-size var-font-size + 19
      margin-bottom: 5px
    .inner-main-title:after
      background: linear-gradient(140deg, #1d8099 0%, #379eb3 50%, #4db6c9 75%)
      height: 6px
      display: block
      content: ""
      margin-top: 15px
      width: 175px
    h2
      font-size var-font-size + 20
      font-family font-bold
      margin-bottom: 20px

#inner-content
    .container
      background-color: #fff
      padding: 70px 80px
      box-shadow 0px 0px 4px 0px rgba(70,70,70,0.1)

.inner-content-wrap
    padding-right: 40px
    .protection-title
      font-size: 24px
      font-family font-bold
    p
      margin-bottom: 25px



/*archive section*/
.main-blog-post-title
    color: #292929

.main-blog-post
    padding: 30px 0
    border-bottom: 1px solid #e0e0e0

.main-blog-meta
    margin-bottom: 15px
    span
      color: #1b7f98

.main-blog-excerpt
    text-align: justify

.main-blog-post-date
    margin-right: 20px

.main-blog-post-date:before
.main-blog-post-author:before
    display: inline-block
    content: ""
    height: 20px
    width: 20px
    position: relative
    top: 5px
    margin-right: 5px

.main-blog-post-date:before
    background: url(../img/icons/post-calendar-icon.png) no-repeat
.main-blog-post-author:before
    background: url(../img/icons/post-author-icon.png) no-repeat

.main-blog-post img,
.blog-single-post img
    margin-bottom: 40px
    width: 100%

.main-blog-post .btn,
.blog-single-post .btn
    font-size var-font-size + 4
.blog-single-post
    p
      font-family font-regular
    h4
      font-size var-font-size + 8
      font-family font-bold
    h6
      font-size var-font-size + 4
    ol
      li
        font-family font-bold

#main-blog-pagination
    margin: 30px 0 0
    padding: 0
    text-align: center
    li
      display: inline-block
      margin-right: 10px
      position: relative
      a
        border: 1px solid #46afc4
        border-radius(50%)
        font-size var-font-size + 3
        color: #777
        width: 34px
        height: 34px
        text-align: center
        font-family font-semibold
      .pagination-dot
        border: none
        background-size: none
        padding: 0;
      .pagination-dot:hover
        background: none
        color: #777
      .pagination-next
        background: #dedede
        border: none
      .pagination-next:hover
        background: #f2f2f2
      .pagination-next:before
        width: 0px
        content: ""
        display: block
        border-top: 6px solid transparent
        border-left: 10px solid #71be59
        border-bottom: 6px solid transparent
        position: absolute
        left: 0
        right: 0
        margin: 2px auto 0
      .active
      a:hover
        background: linear-gradient(140deg, #288ca4 0%, #3ea5ba 50%, #4bb4c6 75%)
        color: #fff

.faq-panel .panel
    margin-bottom: 10px
.faq-panel.panel-wrapper
    margin-top: 30px
.faq-panel .panel-title
    margin: 0
.faq-panel .panel-heading
    padding: 0
    border:0
    background-color: #354954
    border-radius(4px 4px 4px 4px)
    a,
    a:active
      display: block
      padding: 15px
      color: #fff
      font-size: 19px
      font-weight: bold
      text-decoration: none
    a:before
      background: url(../img/icons/collapse-icon.png) no-repeat
      display: block
      width: 25px
      height: 25px
      content: ""
      float: right;
      transition: all 0.5s;
.faq-panel .panel-body
    padding: 30px
    border: 1px solid #ebebeb
    border-radius(0 0 4px 4px)
    p
      margin-bottom: 25px
    h4
      color: #71be59
      font-size: 20px
      font-weight: bold
      margin-bottom: 25px
    ul
      padding-left: 20px;
      margin-bottom: 30px
    li
      display: block
      margin-bottom: 20px
      position: relative
      padding-left: 30px
    span
      font-family: font-semibold
    li:before
      left: 0
      top: 6px
      background: url("../img/icons/collapse-check.png") no-repeat right center
      content: ''
      position: absolute
      width: 15px
      height: 12px
 
.faq-calculate:before
  background: linear-gradient(140deg,#177a95 0%,#2f96ad 50%,#43adc1 75%)
  content: ""
  display: block
  position: absolute
  width: 100%
  height: 8px
  top: -5px
  left: 0
  border-radius: 4px
  
.faq-calculate
  position: relative
  border: 1px solid #e1e1e1
  overflow-x: auto
  .slider-selection
    background: linear-gradient(140deg,#177a95 0%,#2f96ad 50%,#43adc1 75%)   
  .slider-handle
    background: url("../img/icons/slider-point.png") no-repeat
    background-size: contain
    curose: pointer
  .slider-track-high
    background: #bcbcbc
  .slider.slider-horizontal
    width: 100%
  .amount
    text-align: center
    border: 1px solid #e1e1e1
    padding: 8px
    border-radius: 50px
    margin-top: -8px
    margin-bottom: 15px
  .btn
    display: block
    margin-top: 25px
  h5
    color: #343434
    font-size: 18px
    font-family font-bold
    margin-bottom: 20px
.faq-calculate-wrap
  padding: 25px   
.faq-slider-wrap
  background: #efefef
  padding: 15px 20px
  border-radius: 50px
  margin-bottom: 20px
.step-select-wrap 
  .quote-select-code
    background-image: url("../img/icons/down-icon2.png")
    background-repeat: no-repeat
    background-position: right center
    border: 1px solid #ebebeb
    padding: 10px 20px
    width: 100%
    font-size: 14px
    font-family font-bold
  select
    -moz-appearance: window
    -webkit-appearance: none

.cal-table,
.cal-table2
  border-top: 1px solid #e1e1e1
  border-bottom: 1px solid #e1e1e1
  margin-top: 10px
  width: 100%
 
 
.cal-table
  background-color: #f4f4f4
  margin-bottom: 20px
  td
    padding: 15px
    font-size: 12px
    border-right: 1px solid #e1e1e1
  td:last-child
    border: none
  strong
    font-size: 15px

.cal-table2
  th,
  td
    padding: 15px 
    text-align: center
  th
    font-size: 14px
  td
    font-size: 13px
  th:nth-child(1)
    background-color: #9d9d9d
  th:nth-child(2)
    background-color: #bfbfbf
  th:nth-child(3)
    background-color: #d4d4d4
  th:nth-child(4)
    background-color: #e3e3e3
  th:nth-child(5)
    background-color: #ececec
    
@media screen and (max-width: 1200px)
    .compare-box2
        padding: 50px 0 50px 0
    .protection-box
        padding: 60px 20px 40px
    .cal-table 
      td 
        padding: 12px  
@media screen and (max-width: 990px)
    .inner-content-wrap
        padding: 0

    #policies-insurance
      h3
        margin: 0 0 20px 0;

@media screen and (max-width: 580px)
    #inner-content
        padding: 0 20px
        .container
            padding: 40px
        .col-md-12
          padding: 0

    #inner-page h2
         font-size var-font-size + 16

    .inner-content-wrap
      .protection-title
        font-size var-font-size + 8

    #why-insurance , .service-box.last  , .top-menu-list li
       margin: 0

    #service, #used-insurance, #protection-insurance
       padding: 20px 0

    #life-insurance
       padding: 20px 0 0

    .protection-box.nm-m
       margin-bottom: 40px

    .protection-box
       padding: 60px 20px 20px
       margin-bottom: 80px

    .compare-box ,  .compare-box2
      padding: 40px 20px

    .slick-slide
        margin: 0px 15px

    .slick-prev
        left: -30px

    .slick-next
        right: -25px

    #pagination li
       margin: 0
       
    .faq-panel .panel-heading
      a,
      a:active
        font-size: 15px
    .faq-panel .panel-body 
      padding: 15px
      p,
      .amount 
        font-size: 14px
    .cal-table 
      td
        padding: 10px
          
@media screen and (max-width: 380px)
    #main-blog-pagination
       li
           margin: 0
