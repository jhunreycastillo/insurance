@media screen and (max-width: 1200px)
    .compare-box2
        padding: 50px 0 50px 0
    .top-menu-list li
        margin-right: 15px
    .protection-box
        padding: 60px 20px 40px
    .finance-btn
        display: block
        float: none
@media screen and (max-width: 990px)
/* header style */
    header
      padding 10px 0
    #toggle
        display: block
    #side-right
        opacity: 0;
        visibility: hidden
        transition: opacity .4s
        position: absolute
        z-index: 1000
        width: 100%
        left: 0
        right: 0
        padding: 0 40px 0 40px
        text-align: left
        background: white
        box-shadow 0 1px 8px rgba(0,0,0,0.05)
    .header-help-center
        padding: 15px
    .top-menu-list
        li
          display: block
          border-bottom: 1px solid #e2e2e2
          margin-right: 0
          a
            display: block
            padding: 15px
          a:hover
            background-color: #f2f2f2

    .header-help-center,
    .top-menu-list
        float: none
    .dropdown-menu
        position: relative
        top: 0
        margin-bottom: 15px
        border-radius: 0
        padding: 0 0 10px 0
        .container
          width: 100%
          padding: 0 20px
        p
          margin-top: 20px
    .mega-menu-list li
        padding: 0
    .mega-menu-list2.arrow-list
        li::before
          top: 25px;
    .mega-last li
        text-align: left
    #logo,
    #top-menu,
    #side-right
        float: none
    .header-help-center,
    .call-text
        float: left
    .navbar-toggleable-md
        position: absolute
        right: 0
        top: 0
        width: 100%
        z-index: 1000
    #top-menu
        margin-top: 65px
        background-color: #fff
        padding: 20px
    #top-menu:before , #top-menu:after
        display: table
        content: ""
    #top-menu:after
        clear: both
    .mega-menu-list.mega-last li
        border: none
    .top-menu-list
        li
          a:hover
            background: none
            color: #f39c12
          .btn2
            padding: 10px
            width: 100%
            margin-top: 15px

    .mega-menu-list2.dropdown-arrow-list li::before
        top: 24px
    .open-dropdown
        .link-dropdown:after
          border: none

    /*  inner style */
    .inner-content-wrap
        padding: 0

    #policies-insurance
      h3
        margin: 0 0 20px 0;


    /* sidebar style */
    #sidebar
        margin-top: 40px
    .widget-quote-box .input-code
        background-position: 2% center
    .widget-search-box button
        top: 95px

  /*  footer style */
    #footer-menu
        padding: 0
        ul
          padding: 0 5px 0 0

@media screen and (max-width: 768px)
    #footer-menu
        padding: 0 15px


@media screen and (max-width: 580px)
    /* general style */
    h1
        font-size var-font-size + 22

    h2
        font-size var-font-size + 16

    .btn
        font-size var-font-size + 3
        padding: 10px 0
        width: 100%

    /* header style */
    header
      .container
        padding: 0 15px
    #side-right
        padding: 0
    #toggle
        right: 20px

    /* inner style */
    #inner-content
        padding: 0 20px
        .container
            padding: 40px
        .col-md-12
          padding: 0

    #inner-page h2
         font-size var-font-size + 16

    /*sidebar style*/
    .main-blog-meta
        span
            display: block
            font-size var-font-size + 2

    /* section style */
    #why-insurance , .service-box.last  , .top-menu-list li
        margin: 0

    #service, #used-insurance, #protection-insurance
        padding: 20px 0

    #life-insurance
        padding: 20px 0 0

    .protection-box.nm-m
        margin-bottom: 40px

    .protection-box
        padding: 60px 20px 20px
        margin-bottom: 80px

    .compare-box ,  .compare-box2
       padding: 40px 20px

    /* inner style */

    .inner-content-wrap
      .protection-title
        font-size var-font-size + 8

    /* slick style */
    .slick-slide
         margin: 0px 15px

     .slick-prev
         left: -30px

     .slick-next
         right: -25px

     /* blog style */

    #pagination li
        margin: 0


    /* widget style */
    .widget-quote-box
      input[type="text"],
      select
        font-size var-font-size - 1
        padding: 10px 10px 10px 35px

     .widget-search-box
        input[type="text"]
          padding: 10px 35px 10px 20px
          font-size var-font-size - 1

    .widget-search-box button
        top: 90px
        right: 25px

    .widget-quote-box .select-icon
        top: 8px

    /* collapse style */
    .panel-heading
      a
        font-size var-font-size + 5

    /* footer style */
    footer
       padding: 20px 0

    #footer-menu
       padding-left: 20px

@media screen and (max-width: 380px)
    #main-blog-pagination
        li
            margin: 0
    .panel-body
      ul
        padding: 0
